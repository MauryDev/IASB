@using Web.Database.Model

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Deletar Aluno: @Pessoa.Nome</MudText>
    </TitleContent>

    <DialogContent>
        <MudText Align="Align.Center" >Tem certeza que deseja deletar o aluno **@(Pessoa.Nome)**?</MudText>
        <MudText Color="Color.Secondary" Align="Align.Center" Typo="Typo.body2">Esta ação é irreversível.</MudText>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Deletar</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Pessoa Pessoa { get; set; } = new();

    private async Task Submit()
    {
        // Ao confirmar, o diálogo será fechado com um resultado 'Ok' e o objeto Pessoa
        // indicando que a exclusão foi confirmada. A lógica de exclusão real deve
        // ser implementada no serviço ou componente que abriu este diálogo.
        MudDialog.Close(DialogResult.Ok(Pessoa));
    }

    private void Cancel() => MudDialog.Cancel();

}