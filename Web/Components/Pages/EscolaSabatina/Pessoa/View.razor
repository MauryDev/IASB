@using Web.Database.Model

<MudDialog >
    <TitleContent>
        <MudText Typo="Typo.h6">Aluno: @Pessoa.Nome</MudText>
    </TitleContent>

    <DialogContent>
        <MudContainer MaxWidth="MaxWidth.ExtraSmall">
            <MudGrid Justify="Justify.Center" Class="mb-4">
                <MudItem xs="12" Class="d-flex justify-center">
                    <MudText Typo="Typo.h5" Align="Align.Center">@Pessoa.Nome</MudText>
                </MudItem>
                <MudItem xs="12" Class="d-flex justify-center flex-column align-center mt-2">
                    @if (Pessoa.Ativo)
                    {
                        <MudChip T="string" Color="Color.Success" Variant="Variant.Filled" Icon="@Icons.Material.Filled.CheckCircleOutline" Size="Size.Large">Ativo</MudChip>
                    }
                    else
                    {
                        <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Icon="@Icons.Material.Filled.DisabledByDefault" Size="Size.Large">Inativo</MudChip>
                    }
                </MudItem>
            </MudGrid>
        </MudContainer>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
   
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Pessoa Pessoa { get; set; } = new();

    private async Task Submit()
    {
        MudDialog.Close(DialogResult.Ok(Pessoa));
    }

    private void Cancel() => MudDialog.Cancel();

}